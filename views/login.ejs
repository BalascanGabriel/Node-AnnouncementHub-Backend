<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f1f1f1;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .login-container {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            width: 400px;
            text-align: center;
        }

        .login-form label {
            display: block;
            text-align: left;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .login-form input {
            display: block;
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 1rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        .login-form button {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 0.5rem 1rem;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .login-form button:hover {
            background-color: #0056b3;
        }

        .login-form h2 {
            margin-top: 0;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <h2>Login</h2>
        <form action="/api/users/login" method="POST" id="loginForm" class="login-form">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>

            <button type="submit">Login</button>
        </form>
    </div>
    <script>
        // Update the form submission logic
        const email = document.querySelector("#email");
        const password = document.querySelector("#password");
        const form = document.querySelector("#loginForm");

        form.onsubmit = async (e) => {
            e.preventDefault();
            console.log(email.value, password.value);

            let res = await fetch('/api/users/login', {
                method: 'POST',
                mode: 'cors',
                cache: 'no-cache',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    email: email.value,
                    password: password.value
                })
            });

            const jsonResponse = await res.json();

            if (res.status === 200 && jsonResponse.success) {
                // Successful login
                alert(jsonResponse.message); // Display the success message
                localStorage.setItem("user", JSON.stringify(jsonResponse.user));
                localStorage.setItem("isLoggedIn", true);
                window.location.href = '/'; // Redirect to the main page

            } else {
                // Invalid login
                alert(jsonResponse.message); // Display the error message
            }
        };

    </script>
</body>

</html>